.checkorder {
  width: 100%;
  height: 100vh;
  background-color: rgba(204, 204, 204, 0.63);
  padding: 10rpx 10rpx;
  box-sizing: border-box;
}

.checkorder_info {
  display: flex;
  flex-direction: column;
  padding: 10px 10px;
  font-size: 28rpx;
  background-color: rgba(255, 255, 255, 0.568);
  border-radius: 10px;
  margin-bottom: 10rpx;
}

.checkorder_tit {
  margin-bottom: 10rpx;
  font-size: 30rpx;
  line-height: 2;
}

.checkorder_tit_bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.checkorder_bo_one {
  line-height: 2;
}

.checkorder_bo_font {
  margin-left: 10rpx;
}

/* 订单信息 */

.checkorder_order {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 10px 10px 30px 10px;
  font-size: 28rpx;
  background-color: rgba(255, 255, 255, 0.568);
  border-radius: 10px;
}
.checkorder_order_data{
  display: flex;
   border-bottom: 1px solid #ccc;
  flex-direction: column;

}
.checkorder_data_one{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.checkorder_book_sale{
  display: flex;
  width: 200rpx;
  flex-direction: row;
  justify-content: space-between;
}
.checkorder_book_num{
  margin-right: 10px;
}

.checkorder_book_all{
  
  position: absolute;
  right: 30rpx;
  bottom: 5rpx;
}

.checkorder_pay{
  position: absolute;
  bottom: 0;
  height: 80rpx;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.568);  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 4rpx 8rpx;
  box-sizing: border-box;
}
.pay{
  width: 80px;
  height: 100%;
  background-color: rgb(61, 219, 240);
  line-height: 70rpx;
  text-align: center;
  border-radius: 4px;
}