}
.form text.clearInput {
  width: 30rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  z-index: 2;
  right: 0;
  top: 30rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-image: url('https://static.luckincoffeecdn.com/mini/images/login/icon_remove.png');
}
